							"nextContactTime" : $.trim($("#create-nextContactTime").val()),
							"address" : $.trim($("#create-address").val())
								
						},
						type:"post",
						dataType:"json",
						success:function(data){
							//返回true或false
							
							if(data.success){
								$("#createClueModal").modal("hide");
								showPage(1,2);
							}else{
								alert("添加失败");
							}
						}
						
					})
				})
		
		
		
	});
	
	
	
	
	
	
	
	function showPage(pageNo,pageSize) {
		
		$("#select-fullname").val($.trim($("#hidden-fullname").val()));
		$("#select-appellation").val($.trim($("#hidden-appellation").val()));
		$("#select-company").val($.trim($("#hidden-company").val()));
		$("#select-phone").val($.trim($("#hidden-phone").val()));
		$("#select-mphone").val($.trim($("#hidden-mphone").val()));
		$("#select-source").val($.trim($("#hidden-source").val()));
		$("#select-createBy").val($.trim($("#hidden-createBy").val()));
		$("#select-state").val($.trim($("#hidden-state").val()));
		
			$.ajax({
			
					url:"workbench/clue/showPage.do",
					data:{
						"pageNo":pageNo,
						"pageSize":pageSize,
						"fullname":$.trim($("#select-fullname").val()),
						"appellation":$.trim($("#hidden-appellation").val()),
						"company":$.trim($("#select-company").val()),
						"phone":$.trim($("#select-phone").val()),
						"mphone":$.trim($("#select-mphone").val()),
						"source":$.trim($("#select-source").val()),
						"owner":$.trim($("#select-createBy").val()),
						"state":$.trim($("#select-state").val())
					},
					
					type:"get",
					dataType:"json",
					success:function (data){
						
					 	var html="";
						
						$.each(data.list,function(i,n){
							
							html +='<tr class="active">',
							html +='<td><input type="checkbox" name="ck" value="'+n.id+'"/></td>',
							html +='<td><a style="text-decoration: none; cursor: pointer;" onclick="window.location.href=\'workbench/clue/detail.do?id='+n.id+'\';">'+n.fullname+''+n.appellation+'</a></td>',
							html +='<td>'+n.company+'</td>',
							html +='<td>'+n.phone+'</td>',
							html +='<td>'+n.mphone+'</td>',
							html +='<td>'+n.source+'</td>',
							html +='<td>'+n.createBy+'</td>',
							html +='<td>'+n.state+'</td>',
							html +='</tr>'
						})
						
						
						$("#activityBody").html(html);
						
						
						var totalPages = data.total%pageSize==0?data.total/pageSize:parseInt(data.total/pageSize)+1;
						
						//使用bootstrap的分页插件展现分页信息
						$("#activityPage").bs_pagination({
							currentPage: pageNo, // 页码
							rowsPerPage: pageSize, // 每页显示的记录条数
							maxRowsPerPage: 20, // 每页最多显示的记录条数
							totalPages: totalPages, // 总页数
							totalRows: data.total, // 总记录条数

							visiblePageLinks: 3, // 显示几个卡片

							showGoToPage: true,
							showRowsPerPage: true,
							showRowsInfo: true,
							showRowsDefaultInfo: true, 
							
							onChangePage : function(event, data){
								pageList(data.currentPage , data.rowsPerPage);
								$("#ckbo").prop("checked",false);
							}
					   });
						 
						
					}
				
			})
		
	} 
	
	
	
</script>
